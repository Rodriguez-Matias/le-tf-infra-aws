resource "aws_s3_bucket" "vault_bucket" {
  bucket        = "bb-shared-vault-storage"
  acl           = "private"
  force_destroy = true

  versioning {
    enabled = false
  }

  server_side_encryption_configuration {
    rule {
      apply_server_side_encryption_by_default {
        sse_algorithm = "AES256"
      }
    }
  }
  
  tags = "${local.tags}"
}